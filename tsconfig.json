{
	"extends": "./.svelte-kit/tsconfig.json",
	"include": ["backend/", "src/**/*"],
	"exclude": ["src/classes/*"],
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"moduleResolution": "Bundler",
		"outDir": "build",
		"noEmit": false,
		"target": "ES6",
		"module": "ESNext",
		"allowSyntheticDefaultImports": true
	},
	"tsc-alias": {
		"resolveFullPaths": true
	}
}
